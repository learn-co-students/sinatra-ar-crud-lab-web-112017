
<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" name="name" id="user_name" value="<%=@post.name%>"<br>
  Content: <input type="text" name="content" id="user_content" value="<%=@post.content%>"><br>
  <input type="submit" value="submit">
</form>




