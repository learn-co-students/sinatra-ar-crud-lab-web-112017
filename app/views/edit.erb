<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="user_name">Name:</label> <input id="user_name" type="text" name="name" placeholder="Name" value="<%=@post.name%>" > <br>
  <label for="user_content">Content:</label> <input id="user_content" type="text" name="content" placeholder="Content" value="<%=@post.content%>" > <br>
  <input type="submit" value="submit">
</form>
